<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="smart.mirror">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_appicon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_appicon_round"
        android:supportsRtl="true"
        android:theme="@style/backgroundtheme">
        <activity android:name=".LoadingScreen"></activity>
        <activity android:name=".DesignLayoutScreenActivity" />
        <activity android:name=".navigation">

            <!-- Specify the parent Activity -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".loginScreenActivity" />
        </activity>
        <activity android:name=".Setting" />
        <activity android:name=".WaitingListActivity" />
        <activity android:name=".SignUp" />
        <activity android:name=".ControlLedScreenActivity" />
        <activity android:name=".SpeakerControlScreenActivity" />
        <activity android:name=".CreatenewScreenActivity" />
        <activity android:name=".loginScreenActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>